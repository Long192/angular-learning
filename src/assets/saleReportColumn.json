{
  "columns": [
    { "header": "Mã số", "binding": "GroupCode", "width": 70, "align": "left" },
    { "header": "Chỉ tiêu", "binding": "GroupName", "width": 195 },
    { "header": "Dvt", "binding": "Unit", "width": 60 },
    { "header": "Số lượng", "binding": "Quantity", "width": 65, "align": "right" },
    { "binding": "Date", "format": "dd/MM/yyyy", "align": "right", "width": 90 },
    { "binding": "CheckBox", "width": 75, "align": "center" },
    { "header": "Doanh số (chưa thuế)", "binding": "Amount2", "aggregate": "Sum" },
    {
      "header": "Tiền thanh toán",
      "columns": [
        { "header": "Tổng cộng", "binding": "TotalAmount", "aggregate": "Sum" },
        { "header": "Thu tiền ngay", "binding": "Amount111", "aggregate": "Sum" },
        { "header": "Công nợ", "binding": "Amount131", "aggregate": "Sum" }
      ]
    },
    { "header": "Lãi gộp (Doanh số - tiền vốn)", "binding": "Profit", "aggregate": "Sum" },
    { "header": "Chiết khấu", "binding": "DiscountAmount", "aggregate": "Sum" }
  ],
  "collumnGroup": ["SubTotalName"],
  "rules": [
    {
      "key": "Amount131",
      "operation": "e",
      "compareValue": 0,
      "property": "innerText",
      "value": ""
    },
    {
      "key": "DiscountAmount",
      "operation": "e",
      "compareValue": 0,
      "property": "innerText",
      "value": ""
    },
    {
      "key": "Amount2",
      "operation": "ge",
      "compareValue": 1000000,
      "property": "style.background-color",
      "value": "red"
    },
    {
      "key": "TotalAmount",
      "operation": "ge",
      "compareValue": 1000000,
      "property": "style.color",
      "value": "red"
    }
  ],
  "style": {
    "common": {
      "key": "sale-list",
      "gridHeight": "500px"
    },
    "dynamix": {
      "header": [
        { "gridProperty": "background-color", "reportProperty": "BackgroundColor", "value": "cornsilk" },
        { "gridProperty": "font-weight", "reportProperty": "FontWeight", "value": "Bold" },
        { "gridProperty": "text-align", "reportProperty": "TextAlign", "value": "center" },
        { "gridProperty": "justify-content", "value": "center" }
      ],
      "body": [],
      "cell": [
        { "gridProperty": "word-wrap", "value": "break-word" },
        { "gridProperty": "white-space", "value": " break-spaces" },
        { "gridProperty": "padding", "value": "4px 6px 3px 6px" }
      ],
      "alt": [{ "reportProperty": "BackgroundColor", "value": "#f7f7f7" }],
      "group": [
        { "gridProperty": "background-color", "reportProperty": "BackgroundColor", "value": "wheat" },
        { "gridProperty": "font-weight", "reportProperty": "FontWeight", "value": "Bold" }
      ],
      "fotter": [
        { "gridProperty": "background-color", "reportProperty": "BackgroundColor", "value": "cornsilk" },
        { "gridProperty": "font-weight", "reportProperty": "FontWeight", "value": "Bold" }
      ]
    }
  }
}
